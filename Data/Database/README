Get Erstglieder:

grep '^[A-ZÄÖÜ][a-zäöüß]\+_+=n_[A-ZÄÖÜ][a-zäöüß]\+$' ../decow16ax_comps.txt | grep -o '^[A-ZÄÖÜ][a-zäöüß]\+' | sort -T . -S 40G | uniq > erstglieder+Un.txt

Get token freqs:

grep '^[A-ZÄÖÜ][a-zäöüß]\+\_[A-ZÄÖÜ][a-zäöüß]\+$' ../decow16ax_comps.txt | grep -o '^[A-ZÄÖÜ][a-zäöüß]\+' | sort -T . -S 40G | uniq -c | sort -T . -S 40G -nr | sed 's/ *\([0-9]\+\) \+\([^ ]\+\)$/\2      \1/' > ftoken_erstglieder_ohne.txt

Get type freqs:

grep '^[A-ZÄÖÜ][a-zäöüß]\+_+er_[A-ZÄÖÜ][a-zäöüß]\+$' ../decow16ax_comps.txt | uniq | grep -o '^[A-ZÄÖÜ][a-zäöüß]\+' | sort -T . -S 40G | uniq -c | sort -T . -S 40G -nr | sed 's/ *\([0-9]\+\) \+\([^ ]\+\)$/\2   \1/' > ftype_erstglieder+er.txt

Get hapax count:

grep '^[A-ZÄÖÜ][a-zäöüß]\+_+e_[A-ZÄÖÜ][a-zäöüß]\+$' ../decow16ax_comps.txt | uniq -u | grep -o '^[A-ZÄÖÜ][a-zäöüß]\+' | sort -T . -S 40G | uniq -c | sort -T . -S 40G -nr | sed 's/ *\([0-9]\+\) \+\([^ ]\+\)$/\2 \1/' > fhapax_erstglieder+e.txt

Get compounds:

grep '^[A-ZÄÖÜ][a-zäöüß]\+_+e_[A-ZÄÖÜ][a-zäöüß]\+$' ../decow16ax_comps.txt | sed 's/_[^_]\+_/        /' | uniq -c | sort -nr -T . -S 40G | sed 's/ *\([0-9]\+\) \+\(.+\)$/\2 \1/' > compounds+e.csv
